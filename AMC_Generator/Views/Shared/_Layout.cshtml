@*
  Global layout – Bootstrap 5 RTL, Arabic labels
  Make sure you added the bootstrap.rtl.min.css CDN (or host it in wwwroot)
*@
<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | نظام إدارة عقود الصيانة</title>

    <!-- Bootstrap 5 RTL (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css"
          rel="stylesheet"
          integrity="sha384-..." crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ===== NAV BAR ===== -->
    <header class="border-bottom mb-3">
        <nav class="navbar navbar-expand-lg bg-white">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    عقد الصيانة
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarMain" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="navbarMain" class="collapse navbar-collapse justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Buildings" asp-action="Index">المباني</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AMCs" asp-action="Index">العقود</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Owners" asp-action="Index">الملاك</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN BODY ===== -->
    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="border-top text-muted py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year – نظام عقود الصيانة
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
